{% extends 'CoreBundle:cms:base.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block title %}
    {{ 'travel_port' }}
{% endblock %}
{% block body %}
    <section id='content'>
        <div class='container-fluid'>
            <div class='row-fluid' id='content-wrapper'>
                <div class='span12'>
                    {% embed 'CoreBundle:cms:content/content-header.html.twig' %}
                        {% block contentTitle %} {{ 'product_bundle.product.categories'|trans }} {% endblock %}
                    {%  endembed %}
                    <div class='row-fluid'>
                        <div class="pull-right">
                            <a class="btn btn-primary" style="margin-bottom:8px" href="{{ url('oni_add_category') }}" > <i class="icon-plus"></i> {{ 'product_bundle.add.product.category'|trans }} </a>
                        </div>
                    </div>
                    <div class='row-fluid'>
                        <div class='span12 box bordered-box orange-border' style='margin-bottom:0;'>

                            <div class='box-content box-no-padding'>
                                <div class='responsive-table'>
                                    <div class='scrollable-area'>
                                        <table class='data-table-oni-product-categories table table-bordered table-striped' >
                                            <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>Url</th>
                                            </tr>
                                            </thead>
                                        </table>
                                        <template data-table-oni-product-category-options="1">
                                            <td>
                                                <div class='text-right'>
                                                    <a class='btn btn-default btn-mini' href='/app_dev.php/admin/product/category/edit/{productCategoryId}'>
                                                        <i class='icon-edit'></i>
                                                        {{ 'edit'|trans }}
                                                    </a>
                                                    <a class='btn btn-danger btn-mini oni-delete-action' data-toggle="modal" delete-msg="{{ 'modal-messages.delete.confirm.msg'|trans({'%name%':'sdfsdfsdf' , '%item%': 'product_bundle.product.category'|trans}) }}"  delete-url="/app_dev.php/admin/product/category/delete/{productCategoryId}" href='#confirm-delete'>
                                                        <i class='icon-remove'></i>
                                                        {{ 'delete'|trans }}
                                                    </a>
                                                </div>
                                            </td>
                                        </template>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('oni_assets/javascript/product_category_table.js') }}" type="text/javascript"></script>
{% endblock %}