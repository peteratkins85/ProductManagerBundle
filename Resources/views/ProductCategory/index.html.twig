{% extends 'cms/cmsbase.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 bread-crum-bar">

        </div>
    </div>
    <div class="row top-row-content">
        <div class="col-md-6">

        </div>
        <div class="col-md-6" style="text-align: right">
            <a href="addNewPage.php" class="btn btn-success" role="button"><span class="glyphicon glyphicon-plus-sign"></span>  Add Product Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 container">
            <table class="table table-striped">
                <tbody>
                <tr>
                    {% for title in titles|keys %}
                        <td><b>{{ title }}</b></td>
                    {% endfor %}
                    <td></td>
                </tr>
                {% for productCategory in productCategories %}
                    <tr>
                        {% for value in productCategory %}
                        <td>{% if value.date is defined %}{{ value.date }}{% else %} {{ value }} {% endif %} </td>
                        {% endfor %}
                        <td class="options">
                            <a class="btn btn-warning" href="/cms/page/edit/1"><span class="glyphicon glyphicon-pencil"></span> Edit </a>
                            <a class="btn btn-danger" href="/cms/page/edit/1"><span class="glyphicon glyphicon-remove-circle"></span> Delete </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}