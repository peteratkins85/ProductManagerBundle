<?php

namespace Cms\ProductManagerBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * CategoryDefinitions
 */
class CategoryDefinitions
{
    /**
     * @var integer
     */
    private $id;

    /**
     * @var integer
     */
    private $categoryId;

    /**
     * @var string
     */
    private $shotDescription;

    /**
     * @var string
     */
    private $longDescription;


    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set categoryId
     *
     * @param integer $categoryId
     * @return CategoryDefinitions
     */
    public function setCategoryId($categoryId)
    {
        $this->categoryId = $categoryId;

        return $this;
    }

    /**
     * Get categoryId
     *
     * @return integer 
     */
    public function getCategoryId()
    {
        return $this->categoryId;
    }

    /**
     * Set shotDescription
     *
     * @param string $shotDescription
     * @return CategoryDefinitions
     */
    public function setShotDescription($shotDescription)
    {
        $this->shotDescription = $shotDescription;

        return $this;
    }

    /**
     * Get shotDescription
     *
     * @return string 
     */
    public function getShotDescription()
    {
        return $this->shotDescription;
    }

    /**
     * Set longDescription
     *
     * @param string $longDescription
     * @return CategoryDefinitions
     */
    public function setLongDescription($longDescription)
    {
        $this->longDescription = $longDescription;

        return $this;
    }

    /**
     * Get longDescription
     *
     * @return string 
     */
    public function getLongDescription()
    {
        return $this->longDescription;
    }
}
